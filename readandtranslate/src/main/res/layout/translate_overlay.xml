<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/translate_overlay_text"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text_to_translate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/translate_overlay_text"
            android:maxLines="2"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textIsSelectable="true"
            android:textSelectHandle="@color/colorPrimary"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/translate_close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/close_button_selector"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <ListView
        android:id="@+id/translated_text_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" />

</LinearLayout>